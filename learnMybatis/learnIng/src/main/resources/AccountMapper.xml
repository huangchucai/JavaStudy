<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hcc.mybatis.mapper.AccountMapper">

  <select id="selectAccount" resultType="com.hcc.mybatis.Account">
    select * from student where id = #{id}
  </select>

  <select id="selectAccountList" resultType="com.hcc.mybatis.Account">
    select * from student where money > #{money}
  </select>

  <insert id="insertAccount">
    insert into student (name, money) values (#{name}, #{money})
  </insert>

  <update id="updateAccount">
    update student set money = #{money} where id = #{id}
  </update>

  <delete id="deleteAccount">
    delete from student where id = #{id}
  </delete>
</mapper>
